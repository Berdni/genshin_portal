.auth
  .auth__container
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .field[data-controller='field']
        = f.label :email, class: 'field__label', data: { 'field-target': 'label' }
        = f.email_field :email, autocomplete: 'email', class: 'field__input', data: { 'field-target': 'input', action: 'focus->field#focus blur->field#blur' }
